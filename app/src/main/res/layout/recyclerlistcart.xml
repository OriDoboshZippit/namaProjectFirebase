<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <TextView
                android:id="@+id/textViewTitleCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="TITLE"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />
//
            <TextView
                android:id="@+id/textViewPriceCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="35dp"
                android:text="INR 56990"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewQuantityCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="35dp"
                android:text="100"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold" />


            <Button
                android:id="@+id/quantityPlus"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="60dp"
                android:layout_toStartOf="@+id/quantityMinus"
                android:text="+">

            </Button>


            <Button
                android:id="@+id/quantityMinus"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:text="-" />


            <!--            </Button>-->

            <!--            <ImageButton-->
            <!--                android:id="@+id/addToCardRecycle"-->
            <!--                android:layout_width="80dp"-->
            <!--                android:layout_height="60dp"-->
            <!--                android:layout_below="@+id/quantityMinus"-->
            <!--                android:layout_alignParentEnd="true"-->
            <!--                android:layout_marginTop="2dp"-->
            <!--                android:layout_marginEnd="20dp"-->
            <!--                android:scaleType="fitCenter"-->
            <!--                android:src="@drawable/add_to_cart"-->
            <!--                android:text="+"></ImageButton>-->

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
