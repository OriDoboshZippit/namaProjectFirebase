<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="124dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:id="@+id/my_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageDB"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:padding="4dp"
                android:src="@drawable/settings" />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="Title"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewShortDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitle"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="0dp"
                android:text="Category"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/textViewRating"
                android:layout_width="143dp"
                android:layout_height="36dp"
                android:layout_below="@id/textViewShortDesc"
                android:layout_marginStart="128dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="-43dp"
                android:layout_toEndOf="@+id/imageDB"
                android:paddingLeft="65dp"
                android:paddingRight="10dp"
                android:text="110.00 (QNTY)"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageDB"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="-33dp"
                android:text="110.00 price"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/quantityPlus"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="47dp"
                android:layout_marginEnd="30dp"
                android:layout_toStartOf="@+id/quantityMinus"
                android:backgroundTint="@color/white"
                android:text="+"
                android:textColor="@color/black"
                android:visibility="visible">

            </Button>


            <Button
                android:id="@+id/quantityMinus"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="47dp"
                android:layout_marginEnd="0dp"
                android:backgroundTint="@color/white"
                android:text="-"
                android:textColor="@color/black"
                android:visibility="visible">

            </Button>

            <ImageButton
                android:id="@+id/addToCardRecycle"
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:layout_below="@+id/quantityMinus"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-50dp"
                android:layout_marginEnd="40dp"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/add_to_cart"
                android:text="+"></ImageButton>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
